{
  "metadata": {
    "spec-version": "1.5"
  },
  "display-name" : "Record Router",
  "configuration-groups": [
    {
      "label": "Basic",
      "properties": [
        {
          "widget-type": "input-field-selector",
          "label": "Field to split on",
          "name": "fieldToSplitOn",
          "widget-attributes": {

          }
        },
        {
          "widget-type": "function-dropdown-with-alias",
          "label": "Port Specification",
          "name": "portSpecification",
          "widget-attributes": {
            "placeholders": {
              "field": "Value",
              "alias": "Port name"
            },
            "dropdownOptions": [
              "Equals",
              "Not Equals",
              "Contains",
              "Not Contains",
              "In",
              "Not In"
            ]
          },
          "plugin-function": {
            "method": "POST",
            "widget": "outputSchema",
            "output-property": "schema",
            "plugin-method": "outputSchema",
            "required-fields": ["portSpecification"],
            "missing-required-fields-message": "'Port Specification' is required to fetch schema."
          }
        },
        {
          "widget-type": "textbox",
          "label": "Null Port Name",
          "name": "nullPort"
        }
      ]
    },
    {
      "label": "Advanced",
      "properties": [
        {
          "widget-type": "select",
          "label": "Mismatch handling",
          "name": "mismatchHandling",
          "widget-attributes": {
            "values": [
              "Skip",
              "Send to error port",
              "Send to mismatch port"
            ],
            "default": "Skip"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Mismatch Port",
          "name": "mismatchPort"
        }
      ]
    }
  ],
  "emit-errors": true,
  "outputs": []
}
